from decimal import Decimal
#calculating pi would take up significantly more memory, so I grabbed pi up to 1000 digits, since I cant imagine 
pi = Decimal('3.')
def pi_digit():
    #ask for input of what digit the user wants
    digit = input("What digit of Pi would you like to go to? ")
    #make it an integer to be used easier
    digit = int(digit)
    #if digit is above 1000, ask for another one
    while digit > 1000:
        digit = int(input("Sorry, we only have up to 1000 digits, please pick a number less than or equal to 1000. "))
        digit = int(digit)
    #if digit is less than 0, ask again
    while digit < 0:
        digit = int(input("Sorry, you can't have a negative digit! "))
        digit = int(digit)
        
    return print(format(pi,f'.{digit}f'))
